<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <FrameLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout">


        <RelativeLayout
            android:id="@+id/relative_rank2"
            android:layout_width="140dp"
            android:layout_height="200dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="#2"></TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cricket_user1" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="120dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:text=""
                android:textColor="#000" />

            <TextView
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="40dp"
                android:background="@color/sColorPrimary"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="#FFFF"></TextView>
        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/relative_rank1"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:text="#1"></TextView>



            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="8sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:autoSizeTextType="uniform"
                android:text=""
                android:textColor="#000" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:background="@color/sColorPrimary"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="#FFFF"></TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cricket_user1" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_rank3"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_gravity="right"
            android:layout_marginLeft="280dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="#3"></TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="37dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cricket_user1" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:autoSizeMaxTextSize="12sp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:text=""
                android:textColor="#000" />

            <TextView
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/sColorPrimary"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="#FFFF"></TextView>
        </RelativeLayout>
    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ranking"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/frameLayout"
        android:layout_height="match_parent">


    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>